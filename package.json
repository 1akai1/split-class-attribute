{
  "name": "split-class-attribute",
  "displayName": "Split Class Attribute",
  "description": "Split the class attribute values onto new lines",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.62.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/your-username/split-class-attribute.git"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:extension.splitClassAttribute"
  ],
  "main": "./extension.js",
  "contributes": {
    "commands": [
      {
        "command": "extension.splitClassAttribute",
        "title": "Split Class Attribute"
      }
    ],
    "configuration": {
      "title": "Split Class Attribute",
      "properties": {
        "split-class-attribute.splitClassAttributeOnSave": {
          "type": "boolean",
          "default": false,
          "description": "Enable/disable splitting the class attribute values onto new lines on save."
        }
      }
    }
  },
  "scripts": {
    "vsce:package": "vsce package",
    "vsce:publish": "vsce publish"
  },
  "devDependencies": {
    "@types/vscode": "^1.62.0",
    "@types/glob": "^7.1.4",
    "@types/mocha": "^9.0.0",
    "@types/node": "^14.17.5",
    "@types/ws": "^8.2.1",
    "@typescript-eslint/eslint-plugin": "^5.3.0",
    "@typescript-eslint/parser": "^5.3.0",
    "eslint": "^8.2.0",
    "glob": "^7.2.0",
    "mocha": "^9.1.3",
    "typescript": "^4.5.2",
    "vsce": "^2.5.3",
    "vscode-test": "^1.6.2"
  }
}
